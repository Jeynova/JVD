{% extends 'base.html.twig' %}

{% block title %}
    Ajouter une image
{% endblock %}
{% block body %}

    {{ form_start(formPicture) }}
    {{ form_row(formPicture.title,{'attr':{'placeholder':'Titre de l\'image'}}) }}
    {{ form_row(formPicture.name,{'attr':{'placeholder':'Nom de l\'image'}}) }}
    {{ form_row(formPicture.description,{'attr':{'placeholder':'Ajouter du texte a l\'image'}}) }}
    {{ form_row(formPicture.image,{'attr':{'placeholder':'Ajouter l\'image'}}) }}
    <h3>Tags</h3>
    <ul class="tag">
        {# iterate over each existing tag and render its only field: name #}
        {% for tag in formPicture.tag %}
            <li>{{ form_row(tag.name) }}</li>
        {% endfor %}
    </ul>
    <button type="submit">
        {% if editMode %}
            Modifier
        {% else %}
            Ajouter
        {% endif %}
    </button>

    {{ form_end(formPicture) }}
{% endblock %}
