{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col s12 m6">
            <img src="{{ asset('uploads/images/'~ picture.image) }}" alt="{{ picture.name }}">
        </div>
        <div class="col s12 m6">
            <div class="userInfo">
                <div class="row valign-wrapper">
                    <div class="col s2">
                        <img src="{{ asset('uploads/images/'~ picture.user.avatar) }}" alt=""
                             class=" circle responsive-img">
                        <!-- notice the "circle" class -->
                    </div>
                    <div class="col s10">
              <span class="black-text">
                  {% if picture.album %}
                      {{ picture.user.username }} a enregistr√© l'image dans {{ picture.user.albums }}
                  {% endif %}

              </span>
                    </div>
                </div>
            </div>
            <div class="postInfo">
                <p>{{ picture.description }}</p>
            </div>
        </div>
    </div>
{% endblock %}