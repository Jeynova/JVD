{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col s12 m6 l6">
            <img src="{{ asset('uploads/images/'~ picture.image) }}" alt="{{ picture.name }}">
            <a href="{{ path('new_tag', {'id': picture.id}) }}">Ajouter tag</a>
        </div>
        <div class="col s12 m6 l6">
            <div class="userInfo">
                <div class="row valign-wrapper">
                    <div class="col s2">
                        <img src="{{ asset('uploads/images/'~ picture.user.avatar) }}" alt=""
                             class=" circle responsive-img">
                        <!-- notice the "circle" class -->
                    </div>
                    <div class="col s10">
              <span class="black-text">
                  <strong> {{ picture.user.username }}</strong> a post√© l'image <strong>{{ picture.title }}</strong>
                  <div class="postInfo">
                <p>{{ picture.description }}</p>
            </div>
              </span>
                    </div>
                </div>
            </div>

            <div class="formComment">
             {{ form_start(formComment) }}
                {{ form_widget(formComment,{'attr':{'label':'Votre commentaire'}}) }}
                {{ form_end(formComment) }}
            </div>
            <div class="comment">
                <ul class="collection">
                    {% for comment in picture.comments  %}
                        <li class="collection-item avatar">
                            <img src="{{asset('uploads/images/' ~ comment.user.avatar)}}" alt="" class="circle">
                            <span class="title">{{comment.user.username}}</span>
                            <p> {{ comment.content }}<br>
                              <em style="font-size: .7em">{{comment.date | date('d-m-y')}} </em> <a href="{{ path('new_tag') }}"></a>
                            </p>
                            <a href="#" class="secondary-content"><i class="material-icons">favorite</i></a>
                        </li>
                    {% endfor %}


                </ul>

            </div>
        </div>

    </div>
{% endblock %}